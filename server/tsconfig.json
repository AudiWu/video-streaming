{
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "src",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}